@{
    Layout = "_LayoutAdmin";
}
<div>
      <div class="bg-light m-2">
        <h3 class='p-3 text-light bg-dark'>All Users</h3>
        <div class="row m-0 d-flex justify-content-between py-3">
          <div class="col-10">
            <div class="mb-3">
              <input type="email" class="form-control" placeholder="Search By email" />
            </div>
          </div>
          <div class="col-2">
            <button class='btn btn-warning w-100 d-block text-white' data-bs-toggle="modal" data-bs-target="#userModel">
              <i class="bi bi-plus-circle-fill"></i> Add User
            </button>
          </div>
        </div>

        <div class="modal fade" id="userModel" tabIndex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="mb-3">
                    <label htmlFor="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" />
                  </div>
                  <div class="mb-3">
                    <label htmlFor="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" />
                  </div>
                  <div class="mb-3">
                    <label htmlFor="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" />
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add User</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>

        <div class="p-3">
          <table class="table table-striped w-100">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Username</th>
                <th scope="col">Email</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
                <tr key={user._id}>
                  <td>1</td>
                  <td>Kullanici Ismi Burada</td>
                  <td>E-postasi Burada</td>
                  <td>
                    <button class='btn btn-danger mx-1'>
                      <i class="bi bi-trash3-fill"></i> 
                    </button>
                    <button class='btn btn-success mx-1'>
                      <i class="bi bi-pencil-square"></i> 
                    </button>
                  </td>
                </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>